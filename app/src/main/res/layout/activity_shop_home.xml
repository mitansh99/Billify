<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/primary_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="25dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="215dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Hello ðŸ‘‹"
                    android:textColor="@color/secondary_color"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="@string/at"
                    android:textColor="@color/secondary_color"
                    android:textSize="17dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/setting_icon" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/secondary_color"
            android:textSize="50dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-70dp"
        android:background="@drawable/homec_ompo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="20dp"
                android:text="Bills"
                android:textColor="@color/dim_text"
                android:textSize="28dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/admin"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/s_total_bg"
                    android:elevation="5dp"
                    android:orientation="vertical"

                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="27dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:text="Today's Income"
                        android:alpha="0.5"
                        android:textColor="@color/secondary_color"
                        android:textSize="17sp"
                        />

                    <ImageView
                        android:id="@+id/amt_ref"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="25dp"
                        android:padding="2dp"
                        android:src="@drawable/refresh_amt" />


                </LinearLayout>

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â‚¹ 0.0"
                        android:textColor="@color/secondary_color"
                        android:textSize="35sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recentBill"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/home_sq"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/history" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="History"
                        android:textAlignment="center"
                        android:textColor="@color/primary_color"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="20dp"
                android:text="Sale report"
                android:textColor="@color/dim_text"
                android:textSize="28dp"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/home_sq"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="20dp"
                android:orientation="horizontal"
                >

             <com.anychart.AnyChartView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/any_chart_view"
                 android:layout_marginTop="10dp"
                 />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bottom_nav"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28sp"
                            android:layout_height="28dp"
                            android:src="@drawable/home_icon" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/scanBarcode"
                            android:layout_width="28sp"
                            android:layout_height="28sp"
                            android:src="@drawable/barcode_scan" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/profile_btn"
                            android:layout_width="28sp"
                            android:layout_height="28sp"
                            android:src="@drawable/user_icon" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>