<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_ho"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="25dp"
        android:id="@+id/hello"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="250dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/ubuntu_medium"
                android:text="HelloðŸ‘‹"
                android:textColor="@color/secondary_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/ubuntu_light"
                android:text="Chief !!"
                android:textColor="@color/secondary_color"
                android:textSize="17dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/RemoveData"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:src="@drawable/alert" />
    </LinearLayout>

    <TextView
        android:id="@+id/billify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="144dp"
        android:fontFamily="@font/poppins_black"
        android:gravity="center"
        android:text="Billify"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/homec_ompo" >


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="25dp"
            android:text="ShopKeepers"
            android:textColor="@color/primary_color"
            android:textSize="25sp"
            android:fontFamily="@font/ubuntu_bold"/>

        <ImageView
            android:id="@+id/userRef"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="40dp"
            android:padding="2dp"
            android:src="@drawable/refresh_amt" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@id/textView5"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:id="@+id/containerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Items"
            android:textColor="@color/primary_color"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/itemRef"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/item"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="268dp"
            android:layout_marginLeft="25dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/textView6"
            android:padding="2dp"
            android:src="@drawable/refresh_amt" />

        <ScrollView
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:id="@+id/itemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>




    </RelativeLayout>

</RelativeLayout>



